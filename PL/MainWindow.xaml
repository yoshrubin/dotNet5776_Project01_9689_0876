<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="45" Margin="10,235,0,0" VerticalAlignment="Top" Width="125" Click="addDishClick"/>
        <TextBox x:Name="inputText" HorizontalAlignment="Left" Height="19" Margin="29,195,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="86" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="addressText" Text="Address" HorizontalAlignment="Left" Height="21" Margin="130,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
        <ComboBox x:Name="comboBoxSize" Text="Size" HorizontalAlignment="Left" Margin="215,195,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxSize_SelectionChanged"/>

    </Grid>
</Window>
